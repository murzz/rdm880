{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "dev",
      "description": "Base preset for library developers",
      "hidden": true,
      "cacheVariables": {
        "RDM_BUILD_TESTS": "ON",
        "RDM_BUILD_EXAMPLES": "ON"
      }
    },
    {
      "name": "dev-linux",
      "description": "Linux preset for library developers",
      "hidden": false,
      "inherits": [
        "dev"
      ]
    },
    {
      "name": "dev-linux-gcc",
      "description": "Linux preset for library developers with GCC",
      "hidden": false,
      "inherits": [
        "dev-linux"
      ],
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "dev-linux-clang",
      "description": "Linux preset for library developers wih Clang",
      "hidden": false,
      "inherits": [
        "dev-linux"
      ],
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "dev-linux",
      "configurePreset": "dev-linux"
    }
  ],
  "testPresets": [
    {
      "name": "dev-linux",
      "configurePreset": "dev-linux",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    }
  ]
}
